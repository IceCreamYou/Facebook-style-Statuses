/**
 * Formats a status. Does not check to make sure the status belongs to the
 * relevant user if a status is passed in.
 *
 * @param $status
 *   A full status object. If not passed, gets the last status for the relevant
 *   user automatically. If there is none, uses a default message.
 * @return
 *   HTML to display the themed status or FALSE if the current user does not
 *   have permission to view the status.
 */
function theme_facebook_status_item($status = FALSE) {
  global $user;
  if ($status === FALSE) {
    $status = _facebook_status_get_status_fast($user->uid);
  }
  $owner = user_load(array('uid' => $status->uid));
  $poster = user_load(array('uid' => $status->pid));
  if (!user_access('view all statuses') && $user->uid != $owner->uid && $user->uid != $poster->uid) {
    return FALSE;
  }
  $owner_name = theme('username', $owner);
  $poster_name = theme('username', $poster);
  $status_exists = TRUE;
  if (!$status->status) {
    $status_exists = FALSE;
    if (variable_get('facebook_status_concat', 1) == 0) {
      $status->status = t('!user does not have a status.', array('!user' => $owner_name));
    }
    else {
      $status->status = t('does not have a status.');
    }
  }
  $status_text = _facebook_status_run_filter($status->status);
  //Invokes hook_facebook_status_render($owner, $poster, $status).
  $functions = module_invoke_all('facebook_status_render', $owner, $poster, $status_text);
  foreach ($functions as $function => $args) {
    $status_text = call_user_func_array($function, array_merge(array($status_text), $args));
  }
  $edit = '';
  if ($status_exists && _facebook_status_can_edit($status)) {
    $edit = '<span id="facebook_status_edit_delete">'. l(t('Edit'), 'statuses/'. $status->sid .'/edit') .' '. l(t('Delete'), 'statuses/'. $status->sid .'/delete') .'</span>';
  }
  else if ($status_exists && _facebook_status_can_edit($status, TRUE)) {
    $edit = '<span id="facebook_status_edit_delete">'. l(t('Delete'), 'statuses/'. $status->sid .'/delete') .'</span>';
  }
  $time = theme('facebook_status_time', $status->status_time);
  $args = array('!status' => $status_text, '%time' => $time, '!edit' => $edit);
  if ($owner->uid == $poster->uid) {
    $args['!user'] = $owner_name;
    if (variable_get('facebook_status_concat', 1)) {
      if (_facebook_status_possessive($status->status)) {
        $output = t('!user!status %time!edit', $args);
      }
      else {
        $output = t('!user !status %time!edit', $args);
      }
    }
    else {
      $output = t('!status %time!edit', $args);
    }
  }
  else {
    $args['!owner'] = $owner_name;
    $args['!poster'] = $poster_name;
    $args['!conversation'] = '';
    if (module_exists('views') && $owner->uid != $poster->uid) {
      $args['!conversation'] = ' '. l(t('Conversation'), 'statuses/conversation/'. check_plain($owner->name) .','. check_plain($poster->name));
    }
    $output = t('!poster &raquo; !owner: !status %time!edit!conversation', $args);
  }
  return $output;
}

/**
 * Returns the status update form.
 *
 * @param $account
 *   The user whose profile will be posted to, or FALSE to have the module
 *   detect the relevant user automatically according to the settings.
 * @param $size
 *   The size of the status update textfield, or FALSE to use the setting.
 * @param $view
 *   The machine name of a view of statuses to append to the status update form.
 *   This view should take one argument - the User ID of the user whose profile
 *   is being viewed.
 * @return
 *   HTML to display the status update form or FALSE if the user cannot have a
 *   status.
 */
function theme_facebook_status_form_display($account = FALSE, $size = FALSE, $view = FALSE) {
  global $user;
  if ($account === FALSE) {
    $account = facebook_status_choose_owner(FALSE);
  }
  if (($user->uid == $account->uid && user_access('edit own status')) || ($user->uid != $account->uid && user_access('post on all profiles'))) {
    if (!_facebook_status_exclude($account)) {
      return '<div id="facebook_status_update" class="clear-block">'. drupal_get_form('_facebook_status_status', $account, $size, $view) .'</div>';
    }
  }
  $status = _facebook_status_get_status_fast($account->uid);
  return theme('facebook_status_item', $status);
}

/**
 * Returns a formatted string showing the time the status was submitted.
 *
 * @param $status_time
 *   The Unix timestamp for when the relevant status was updated.
 * @return
 *   If the status was submitted within the last 3 days, returns a "time ago"
 *   date. If not, returns a normal (small) date. If zero, returns FALSE.
 */
function theme_facebook_status_time($status_time) {
  if (!$status_time) {
    return FALSE;
  }
  if (time() - $status_time < 60) {
    return t('a moment ago');
  }
  else if (time() - $status_time < 60 * 60 * 24 * 3) {
    return t('!time ago', array('!time' => format_interval(time() - $status_time, 1)));
  }
  else {
    return format_date($status_time, 'small');
  }
}

